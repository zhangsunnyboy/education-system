<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qfedu.dao.LoginDao">
    <select id="login" parameterType="String" resultType="com.qfedu.entity.User">
        select * from t_user where no=#{no}
    </select>
    <select id="findByNo" parameterType="string" resultType="com.qfedu.entity.Staff">
        select * from t_staff where u_no=#{u_no}
    </select>
    <select id="findByNoStu" parameterType="string" resultType="com.qfedu.entity.Student">
        select * from t_student where u_no=#{u_no}
    </select>
</mapper>