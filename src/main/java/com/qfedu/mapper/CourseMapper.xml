<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qfedu.dao.CourseDao">
    <insert id="insertCourse" parameterType="com.qfedu.entity.Course">
        insert into t_course(
        <trim suffixOverrides=",">
            <if test="name !=null">
                name,
            </if>
            <if test="createtime !=null">
                createtime,
            </if>
            <if test="week !=null">
                week,
            </if>
            <if test="type !=null">
                type,
            </if>
            <if test="flag !=null">
                flag
            </if>
        </trim>
        )
        values (
        <trim suffixOverrides=",">
            <if test="name !=null">
                #{name},
            </if>
            <if test="createtime !=null">
                #{createtime},
            </if>
            <if test="week !=null">
                #{week},
            </if>
            <if test="type !=null">
                #{type},
            </if>
            <if test="flag !=null">
                #{flag}
            </if>
        </trim>
        )
    </insert>


    <select id="selectCourseAll"  resultType="com.qfedu.entity.Course">
        select * from t_course
    </select>
    <delete id="deleteCourseById" parameterType="int">
        delete from t_course where id = #{id}
    </delete>
</mapper>